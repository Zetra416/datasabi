{
  "name": "simple-ejs",
  "version": "1.0.0",
  "description": "A simple one-page web EJS application",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "build": "npm run compile && npm run esbuild",
    "compile": "rimraf dist && tsc -p tsconfig.json",
    "esbuild": "esbuild --platform=node --bundle=true --target=es2015 --sourcemap --cwd dist --external:express=express --outfile=dist/app.js"
  },
  "author": "Zetra416",
  "license": "MIT",
  "dependencies": {
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "rimraf": "^3.0.3",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "esbuild": "^0.14.40",
    "rimraf": "^3.0.3",
    "tsc": "^4.7.4"
  }
}
